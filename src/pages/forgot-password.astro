---
import AuthLayout from "@/layouts/AuthLayout.astro";
import ForgotPasswordForm from "@/components/auth/ForgotPasswordForm";

export const prerender = false;

// Redirect authenticated users to home page
const { user } = Astro.locals;
if (user) {
  return Astro.redirect('/');
}
---

<AuthLayout title="Odzyskaj hasło - 10x Cards" description="Odzyskaj dostęp do konta 10x Cards">
  <main class="flex-1 flex items-center justify-center bg-background px-4 py-8">
    <div class="w-full max-w-md">
      <div class="space-y-8">
        {/* Header */}
        <div class="space-y-2 text-center">
          <h1 class="text-3xl font-bold tracking-tight">Odzyskaj hasło</h1>
          <p class="text-muted-foreground">Pomoż nam odnaleźć Twoje konto</p>
        </div>

        {/* Form Card */}
        <div class="bg-card rounded-lg border p-8 shadow-sm">
          <ForgotPasswordForm client:load />
        </div>
      </div>
    </div>
  </main>
</AuthLayout>
