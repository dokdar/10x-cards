---
import AuthLayout from "@/layouts/AuthLayout.astro";
import LoginForm from "@/components/auth/LoginForm";
import { Alert, AlertDescription } from "@/components/ui/alert";
import { isFeatureAvailable } from "@/features/astro";

export const prerender = false;

// Check if auth feature is enabled
const isAuthEnabled = isFeatureAvailable("auth");
if (!isAuthEnabled) {
  return Astro.redirect("/");
}

// Redirect authenticated users to home page
const { user } = Astro.locals;
if (user) {
  return Astro.redirect("/");
}

// Check for error messages from URL params
const errorParam = Astro.url.searchParams.get("error");
let errorMessage = "";

if (errorParam === "link_expired") {
  errorMessage =
    "Link weryfikacyjny wygasł. Jeśli jeszcze nie potwierdziłeś emaila, sprawdź swoją skrzynkę i użyj najnowszego linku.";
}
---

<AuthLayout title="Zaloguj się - 10x Cards" description="Zaloguj się do aplikacji 10x Cards">
  <main class="flex-1 flex items-center justify-center bg-background px-3 py-4 sm:px-4 sm:py-8">
    <div class="w-full max-w-md">
      <div class="space-y-6 sm:space-y-8">
        {/* Header */}
        <div class="space-y-2 text-center">
          <h1 class="text-2xl sm:text-3xl font-bold tracking-tight">Zaloguj się</h1>
          <p class="text-sm sm:text-base text-muted-foreground">Wróć do swojej aplikacji do nauki</p>
        </div>

        {/* Error Alert */}
        {
          errorMessage && (
            <Alert variant="destructive">
              <AlertDescription class="text-sm">{errorMessage}</AlertDescription>
            </Alert>
          )
        }

        {/* Form Card */}
        <div class="bg-card rounded-lg border p-4 sm:p-6 lg:p-8 shadow-sm">
          <LoginForm client:load />
        </div>
      </div>
    </div>
  </main>
</AuthLayout>
