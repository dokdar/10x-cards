---
import Layout from "@/layouts/Layout.astro";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import { Button } from "@/components/ui/button";
import { AlertCircle } from "lucide-react";

export const prerender = false;

// Get feature name and origin from URL params
const featureName = Astro.url.searchParams.get("feature") || "This feature";
const fromPath = Astro.url.searchParams.get("from") || "/";

const title = `${featureName} - Niedostępne`;
const description = `Funkcja ${featureName} jest obecnie niedostępna`;
---

<Layout title={title} description={description}>
  <div class="flex-1 flex items-center justify-center bg-background px-4 py-8">
    <div class="w-full max-w-2xl">
      <div class="space-y-6">
        {/* Header */}
        <div class="space-y-2 text-center">
          <div class="flex justify-center mb-4">
            <div class="rounded-full bg-yellow-500/10 p-4">
              <AlertCircle className="h-12 w-12 text-yellow-500" />
            </div>
          </div>
          <h1 class="text-3xl font-bold tracking-tight">Funkcja niedostępna</h1>
          <p class="text-muted-foreground text-lg">
            {featureName} jest obecnie wyłączona
          </p>
        </div>

        {/* Alert Card */}
        <Alert variant="default" className="border-yellow-500/50 bg-yellow-500/5">
          <AlertCircle className="h-4 w-4 text-yellow-500" />
          <AlertTitle>Tymczasowo niedostępne</AlertTitle>
          <AlertDescription class="mt-2 text-sm">
            <p class="mb-3">
              Funkcja <strong>{featureName}</strong> jest obecnie wyłączona w tym środowisku.
              To może być związane z:
            </p>
            <ul class="list-disc list-inside space-y-1 text-muted-foreground">
              <li>Planowaną konserwacją systemu</li>
              <li>Testowaniem nowych funkcjonalności</li>
              <li>Tymczasowym wyłączeniem w środowisku testowym</li>
              <li>Stopniowym wdrażaniem (feature rollout)</li>
            </ul>
            <p class="mt-3">
              Przepraszamy za niedogodności. Spróbuj ponownie później.
            </p>
          </AlertDescription>
        </Alert>

        {/* Actions */}
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <Button asChild variant="default">
            <a href="/">Strona główna</a>
          </Button>
          <Button asChild variant="outline">
            <a href={fromPath}>Wróć</a>
          </Button>
        </div>

        {/* Additional Info */}
        <div class="text-center text-sm text-muted-foreground">
          <p>
            Jeśli uważasz, że to błąd, skontaktuj się z zespołem wsparcia.
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
