---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { Button } from "@/components/ui/button";

export const prerender = false;

// This page is shown after user confirms their email via link
// User is NOT logged in yet - they need to go to login page

const title = "Email potwierdzony - 10x Cards";
const description = "Twój adres email został potwierdzony";
---

<AuthLayout title={title} description={description}>
  <main class="flex-1 flex items-center justify-center bg-background px-4 py-8">
    <div class="w-full max-w-md">
      <div class="space-y-8">
        {/* Success Icon */}
        <div class="flex justify-center">
          <div class="w-20 h-20 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
            <svg
              class="w-12 h-12 text-green-600 dark:text-green-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>

        {/* Header */}
        <div class="space-y-2 text-center">
          <h1 class="text-3xl font-bold tracking-tight">Email potwierdzony!</h1>
          <p class="text-muted-foreground">Twój adres email został pomyślnie zweryfikowany</p>
        </div>

        {/* Card with instructions */}
        <div class="bg-card rounded-lg border p-8 shadow-sm space-y-6">
          <div class="space-y-3">
            <div class="flex items-start gap-3">
              <div class="mt-1">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium">Konto aktywowane</p>
                <p class="text-sm text-muted-foreground">
                  Możesz teraz zalogować się do aplikacji używając swojego adresu email i hasła
                </p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="mt-1">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="font-medium">Zacznij naukę</p>
                <p class="text-sm text-muted-foreground">Generuj fiszki z tekstu przy pomocy AI i ucz się efektywnie</p>
              </div>
            </div>
          </div>

          {/* CTA Button */}
          <div class="pt-4">
            <a
              href="/login"
              class="w-full inline-flex items-center justify-center px-6 py-3 text-base font-medium bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors shadow-sm"
            >
              Przejdź do logowania
            </a>
          </div>
        </div>

        {/* Additional info */}
        <div class="text-center">
          <p class="text-sm text-muted-foreground">
            Masz problemy z logowaniem?{" "}
            <a href="/forgot-password" class="text-primary hover:underline font-medium"> Zresetuj hasło </a>
          </p>
        </div>
      </div>
    </div>
  </main>
</AuthLayout>
