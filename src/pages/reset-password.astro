---
import AuthLayout from '@/layouts/AuthLayout.astro';
import ResetPasswordForm from '@/components/auth/ResetPasswordForm';

// Check if user came from Supabase verify endpoint with PKCE code
// URL format: /reset-password?code=xxx (PKCE authorization code)
const code = Astro.url.searchParams.get('code');

console.log('[RESET PASSWORD PAGE] URL:', Astro.url.href);
console.log('[RESET PASSWORD PAGE] code:', code ? 'YES' : 'NO');

// IMPORTANT: We do NOT exchange code for session here!
// The code will be used directly in updateUser() call
// This ensures user is NOT logged in until they actually change password
---

<AuthLayout title="Resetuj hasło - 10x Cards" description="Ustaw nowe hasło dla konta 10x Cards">
  <main className="min-h-screen bg-background flex items-center justify-center px-4 py-8">
    <div className="w-full max-w-md mx-auto">
      <div className="space-y-8">
        <div className="space-y-2 text-center">
          <h1 className="text-3xl font-bold tracking-tight">Ustaw nowe hasło</h1>
          <p className="text-muted-foreground">Wprowadź nowe hasło, aby odzyskać dostęp do konta</p>
        </div>

        <div className="bg-card rounded-lg border p-8 shadow-sm">
          <ResetPasswordForm client:load />
        </div>
      </div>
    </div>
  </main>
</AuthLayout>
